{
  "name": "typeorm-ejercicios-clase2",
  "version": "1.0.0",
  "description": "Ejercicios de TypeORM para la Clase II",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist && rm -f *.sqlite",
    "clean:win": "rimraf dist && rimraf *.sqlite",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:ci": "jest --ci --reporters=default --runInBand",
    "test:ej01": "cross-env EJ_SCOPE=ej01 jest --runInBand --runTestsByPath src/ejercicio-01-entities/exercise.spec.ts",
    "test:ej02": "cross-env EJ_SCOPE=ej02 jest --runInBand --runTestsByPath src/ejercicio-02-restrictions/exercise.spec.ts",
    "test:ej03": "cross-env EJ_SCOPE=ej03 jest --runInBand --runTestsByPath src/ejercicio-03-relations/exercise.spec.ts",
    "test:ej04": "cross-env EJ_SCOPE=ej04 jest --runInBand --runTestsByPath src/ejercicio-04-lazy-eager/exercise.spec.ts",
    "test:ej05": "cross-env EJ_SCOPE=ej05 jest --runInBand --runTestsByPath src/ejercicio-05-transacciones/exercise.spec.ts",
    "test:ej06": "cross-env EJ_SCOPE=ej06 jest --runInBand --runTestsByPath src/ejercicio-06-embedded/exercise.spec.ts",
    "test:ej07": "cross-env EJ_SCOPE=ej07 jest --runInBand --runTestsByPath src/ejercicio-07-query-builder/exercise.spec.ts",
    "test:ej08": "cross-env EJ_SCOPE=ej08 jest --runInBand --runTestsByPath src/ejercicio-08-inheritance/exercise.spec.ts",
    "test:ej09": "cross-env EJ_SCOPE=ej09 jest --runInBand --runTestsByPath src/ejercicio-09-optimization/exercise.spec.ts"
  },
  "keywords": [
    "typeorm",
    "typescript",
    "orm",
    "database",
    "sql",
    "sqlite"
  ],
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "cross-env": "^7.0.3"
  }
}
